                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del área a actualizar",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Área Modificada"
                                    }
                                },
                                "type": "object"
                            }
