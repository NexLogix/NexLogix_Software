    "paths": {
        "/api/gestion_areas": {
            "get": {
                "tags": [
                    "Areas"
                ],
                "summary": "Obtener todas las áreas",
                "operationId": "218450c255ee24ae5b8e7f49bf0a7176",
                "responses": {
                    "200": {
                        "description": "Lista de áreas obtenida exitosamente"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/gestion_areas/{id}": {
            "get": {
                "tags": [
                    "Areas"
                ],
                "summary": "Obtener un área por ID",
                "operationId": "25211b478a43ec58e75fa16f8ab97e28",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del área",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Área encontrada exitosamente"
                    },
                    "404": {
                        "description": "Área no encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/gestion_areas/crear_area": {
            "post": {
                "tags": [
                    "Areas"
                ],
                "summary": "Crear un área",
                "operationId": "ba5d74e810f2c0c3bcf38f455e9abeed",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Area Administrativa"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Área creada exitosamente"
                    },
                    "400": {
                        "description": "Error en la solicitud"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
