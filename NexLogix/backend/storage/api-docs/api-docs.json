                "tags": [
                    "Areas"
                ],
                "summary": "Eliminar un área",
                "operationId": "3be0bd9f9fbd8431b428503bcf08de99",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del área a eliminar",
